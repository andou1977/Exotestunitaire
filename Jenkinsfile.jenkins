pipeline {
    agent any
    stages {
        stage('Récupération du code') {
            steps {
                git url: 'https://github.com/ton-utilisateur/ton-projet.git', branch: 'main'
            }
        }
        stage('Compilation et tests') {
            steps {
                sh 'mvn clean test'
            }
        }
        stage('Résultats des tests') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }
    }
}
